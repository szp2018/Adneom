{% block body %}

    <h1>Episodes</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Saison</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
        <tr>
            <td class="col-md-3">{{entity.name}}</td>
            <td class="col-md-3">{{entity.saison}}</td>
            <td class="col-md-3"><a href="/todo/details/{{entity.id}}" class="btn btn-success">Voir</a></td>
        </tr>

        {% endfor %}
        </tbody>
    </table>

{% endblock %}
